<h1>Set Your Goals</h1>

<div class = "row">
	<div class = "col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>

		<%= f.label :target_weight %>
		<%= f.number_field :target_weight, class: 'form-control' %>

		<%= f.label :current_weight %>
		<%= f.number_field :current_weight, class: 'form-control' %>

		<%= f.label :desired_pace %>
		<%= f.select :desired_pace, ["Lose 2 pounds a week", "Lose 1 pound a week", "Maintain weight", "Gain 1 pound a week", "Gain 2 pounds a week"], class: 'form-control' %>

		<%= f.label :current_bodyfat %>
		<%= f.number_field :current_bodyfat, class: 'form-control' %>

		<%= f.label :activity_level %>
		<%= f.select :activity_level, ["Sedentary", "Lightly active", "Moderately active", "Very active"], class: 'form-control' %>

		<%= f.label :carb_percent %>
		<%= f.select :carb_percent, (0..20).to_a.map{|n| [n * 5]}, class: 'form-control' %>

		<%= f.label :protein_percent %>
		<%= f.select :protein_percent, (0..20).to_a.map{|n| [n * 5]}, class: 'form-control' %>		

		<%= f.label :fat_percent %>
		<%= f.select :fat_percent, (0..20).to_a.map{|n| [n * 5]}, class: 'form-control' %>		

		<%= f.submit "Let's get started", class: "btn btn-primary"  %>
		<% end %>
	</div>
</div>
